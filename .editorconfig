; Pra todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

; Estilo de identação em arquivos HTML
[*.html]
indent_style = space
indent_size = 2
 
; Estilo de identação em arquivos CSS
[*.css]
indent_style = space
indent_size = 1

[*.scss]
indent_style = space
indent_size = 1
 
; Estilo de identação em arquivos JS dentro do diretório Scripts
[*.js]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 2
